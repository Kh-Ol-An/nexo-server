{
    "name": "nexo-server",
    "version": "1.0.0",
    "description": "This is a Node.js server built with TypeScript, Express, and MongoDB for scalable web applications.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "_moduleAliases": {
        "@": "dist"
    },
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\""
    },
    "keywords": [
        "Node.js",
        "TypeScript",
        "Express",
        "MongoDB",
        "Server"
    ],
    "author": "Oleh Khrystenko <olegkhristenko@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-validator": "^7.2.1",
        "i18next": "^24.2.0",
        "i18next-fs-backend": "^2.6.0",
        "i18next-http-middleware": "^3.7.1",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "mongodb": "^6.12.0",
        "mongoose": "^8.9.3",
        "node-cron": "^3.0.3",
        "uuid": "^11.0.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/mongodb": "^4.0.7",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^22.10.3",
        "@types/node-cron": "^3.0.11",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.19.0",
        "@typescript-eslint/parser": "^8.19.0",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.7.0",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.14.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.4.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.19.0"
    }
}
